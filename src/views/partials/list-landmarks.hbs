<table class="table is-fullwidth">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Location (Latitude & Longitude)</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  {{#each placemark.landmarks}}
    <tr>
      <td>
        {{name}}
      </td>
      <td>
        {{description}}
      </td>
      <td>
        {{latitude}}
      </td>
      <td>
        {{longitude}}
      </td>
      <td>
        <a href="/placemark/{{../placemark._id}}/deletelandmark/{{_id}}" class="ui icon button">
          <i class="fas fa-trash"></i>
        </a>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>